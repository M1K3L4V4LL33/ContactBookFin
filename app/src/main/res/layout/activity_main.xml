<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comm1k3l4v4ll33.httpsgithub.contactbook.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_information"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Contact Book"
                android:textSize="20sp"
                android:padding="45dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"
                android:text="Name:"
                android:layout_below="@id/tv_information"
                android:padding="20dp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_name"
                android:layout_alignBaseline="@id/tv_name"
                android:layout_toRightOf="@id/tv_name"
                android:layout_alignParentRight="true"
                android:hint="Please enter your contact's name"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_phone"
                android:text="Phone:"
                android:layout_below="@id/tv_name"
                android:padding="20dp"/>
            
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_phone"
                android:layout_alignBaseline="@id/tv_phone"
                android:layout_toRightOf="@id/tv_phone"
                android:layout_alignParentRight="true"
                android:hint="Please enter your contacts #"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_mail"
                android:text="E-mail:"
                android:layout_below="@id/tv_phone"
                android:padding="20dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/et_email"
                android:layout_alignBaseline="@id/tv_mail"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/tv_mail"
                android:hint="Enter There Email"
                android:textAlignment="center"
                android:textSize="16sp"/>
            
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add_contact"
                android:layout_below="@id/et_email"
                android:text="Add Contact"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_sort_contact"
                android:layout_below="@id/btn_add_contact"
                android:text="Sort Cotacts"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_error_message"
                android:layout_below="@id/btn_sort_contact"
                android:padding="30dp"
                android:textSize="22sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sorted_list"
                android:layout_below="@id/tv_error_message"
                android:padding="20dp"
                android:textSize="16sp"/>




        </RelativeLayout>

    </ScrollView>

</FrameLayout>






